<div class="modal-content">
  <h4>Nova Ideia</h4>
  <%= form_for(@idea, remote: true, :html => { :role => "form" }) do |f|  %>
  <div id="error_explanation" class="bg-danger text-danger">
      <ul>
        
      </ul>
    </div>
      <div class="field">
        <%= f.label :kind %>
        <%= f.select :kind, options_for_select(Idea.kinds.map {|type,value| [type,type]},selected: Idea.kinds[:proposal]) %>
        
      </div>
      <div class="field">
        <%= f.label :title %>
          <%= f.text_field :title, id: :idea_title %>
      </div>
      <div class="field">
        <%= f.label :describe %>
          <%= f.text_area :describe, size: "60x12", id: :idea_describe %>
      </div>
      <div class="field">
        <%= f.label :local %>
          <%= f.text_field :local, id: :idea_local %>
      </div>
      <div class="field">
        <%=  collection_check_boxes(:idea, :sector_ids, Sector.all, :id, :name_with_initial)%>
     </div>
          <div class="actions">
            <%= f.submit %>
          </div>
          <% end %>
</div>
<div class="modal-footer">
  <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
</div>